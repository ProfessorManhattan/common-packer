{
  "private": false,
  "name": "@mblabs/shared-common-files",
  "version": "1.0.0",
  "description": "Includes common files used across different types of common file repositories (e.g. Go, Python, etc.)",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/megabyte-labs/common/shared.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/shared/-/issues"
  },
  "type": "module",
  "scripts": {
    "help": "task --list",
    "start": "bash .start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@mblabs/eslint-config": "^1.0.61",
    "@mblabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "handlebars-helpers": "^0.10.0"
  },
  "keywords": [
    "packer",
    "common",
    "shared",
    "files",
    "virtualbox",
    "vmware",
    "kvm",
    "parallels",
    "vm",
    "image"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Repository that hosts common files for Packer projects",
    "overview": "This repository is the upstream repository for Packer projects and their common files. Files that are shared amongst Packer projects are stored in this repository and synchronized via GitLab CI.",
    "name": "Packer Common",
    "group": "common",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/common-packer",
      "gitlab": "https://gitlab.com/megabyte-labs/common/packer"
    },
    "slug": "common-packer",
    "subgroup": "packer",
    "title": "Common Packer Project Files"
  },
  "eslintConfig": {
    "extends": "@mblabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@mblabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
