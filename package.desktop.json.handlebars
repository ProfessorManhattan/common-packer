{
  "scripts": {
    "fix:shellcheck": "find . -type d \\( -name .autodoc -o -name .cache -o -name .common -o -name .git -o -name .husky -o -name .modules -o -name .task -o -name .venv -o -name node_modules -o -name venv \\) -prune -o -type f \\( -name \\*.custom.sh -o -name \\*.custom.sh.j2 \\) -print0 | xargs -0 shellcheck -f diff | git apply",
    "lint:shellcheck": "find . -type d \\( -name .autodoc -o -name .cache -o -name .common -o -name .git -o -name .husky -o -name .modules -o -name .task -o -name .venv -o -name node_modules -o -name venv \\) -prune -o -type f \\( -name \\*.custom.sh -o -name \\*.custom.sh.j2 \\) -print0 | xargs -0 -r -n1 shellcheck"
  },
  "keywords": [
    "accelerated",
    "compressed",
    "desktop",
    "hyperv",
    "kvm",
    "megabytelabs",
    "optimized",
    "packer",
    "parallels",
    "professormanhattan",
    "qemu",
    "virtualbox",
    "vmware",
    "workstation"
  ],
  "lint-staged": {
    "**/*.{sh,sh.j2}": [],
    "scripts/*.custom.sh": [
      "prettier --write",
      "shellcheck"
    ],
    "*template.json": [
      "packer validate"
    ],
    "Vagrantfile": [
      "vagrant validate"
    ]
  },
  "standard-version": {
    "scripts": {
      "prebump": "jq -r '.variables.iso_version' template.json",
      "prerelease": "git add --all",
      "pretag": "PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && if git show-ref --tags v$PACKAGE_VERSION --quiet; then git tag -d v$PACKAGE_VERSION; fi"
    }
  }
}
